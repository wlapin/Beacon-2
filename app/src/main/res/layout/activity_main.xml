<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:orientation="horizontal"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <ImageView
                android:id="@+id/open"
                android:clickable="true"
                android:background="@drawable/ic_dehaze_black_24dp"
                android:layout_width="55dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="353dp"
                android:layout_height="match_parent"
                android:gravity="right|center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/user"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/u1"
                    android:clickable="true"
                    android:text="Current Location" />

                <ImageView
                    android:id="@+id/other_open"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/u3"
                    android:clickable="true"
                    android:text="open Others" />

                <ImageView
                    android:id="@+id/other_close"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/u2"
                    android:clickable="true"
                    android:text="close Others"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
        <com.itheima.library.PhotoView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!--这里是主界面，content，该写什么写什么，加载的时候界面上只会显示这里面的内容-->
    </LinearLayout>


    <LinearLayout
        android:id="@+id/drawer_left"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical">
        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@drawable/editborder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="#595A5C"
                    android:text="Email:"
                    android:textSize="18dp"
                    android:gravity="center|left"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/email"
                    android:textStyle="bold"
                    android:textColor="#F79226"
                    android:text="xxx.assd@aaaa.com"
                    android:layout_weight="2"
                    android:textSize="18dp"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:background="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="#595A5C"
                    android:text="Device:"
                    android:textSize="18dp"
                    android:gravity="center|left"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:textStyle="bold"
                    android:textColor="#F79226"
                    android:id="@+id/Device"
                    android:text="xxx.assd@aaaa.com"
                    android:layout_weight="2"
                    android:textSize="18dp"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:background="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="#595A5C"
                    android:text="Category:"
                    android:textSize="18dp"
                    android:gravity="center|left"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/Category"
                    android:text="xxx.assd@aaaa.com"
                    android:textStyle="bold"
                    android:textColor="#F79226"
                    android:layout_weight="2"
                    android:textSize="18dp"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <View
                android:background="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="#595A5C"
                    android:text="Client:"
                    android:textSize="18dp"
                    android:gravity="center|left"
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/Client"
                    android:textStyle="bold"
                    android:textColor="#F79226"
                    android:text="xxx.assd@aaaa.com"
                    android:layout_weight="2"
                    android:textSize="18dp"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="60dp">
                <Button
                    android:id="@+id/about"
                    android:text="About"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button"
                    android:shadowColor="#F77E7E"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    />

            </LinearLayout>
            <LinearLayout
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <Button
                    android:id="@+id/logout"
                    android:text="Logout"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/button"
                    android:shadowColor="#F77E7E"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5"
                    />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</android.support.v4.widget.DrawerLayout>